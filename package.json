{
  "name": "rpg-quick-navigator",
  "displayName": "RPG Quick Navigator",
  "description": "Simple navigator for free-form RPG: index of declarations, loops, subroutines and procedures, with code navigation.",
  "version": "0.0.1",
  "engines": { "vscode": "^1.93.0" },
  "categories": ["Other"],
  "main": "dist/extension.js",
  "activationEvents": [
    "onLanguage:rpg",
    "onLanguage:rpgle",
    "onLanguage:sqlrpgle"
  ],
  "icon": "images/rpgQuickNavigatorMarketplace.png",
  "contributes": {
    "views": {
      "explorer": [
        { "id": "rpgQuickNavigatorExplorer", "name": "RPG Quick Navigator", "icon": "images/logoRpgQuickNavigator24px.svg" }
      ],
      "rpgQuickNavigator": [
        { "id": "rpgQuickNavigatorView", "name": "RPG Quick Navigator", "icon": "images/logoRpgQuickNavigator24px.svg" }
      ]
    },
    "commands": [
      { 
        "command": "rpgQuickNavigator.analyzeCurrent", 
        "title": "Generate an analysis report of the current RPG file",
        "icon": {
          "light": "images/analyzeCurrentLight24px.svg",
          "dark": "images/analyzeCurrentDark24px.svg"
        }
      },
      { 
        "command": "rpgQuickNavigator.toggleSortOrder", 
        "title": "Toggle sort order" 
      },
      { 
        "command": "rpgQuickNavigator.toggleSortOrder.alphabetical", 
        "title": "Sort alphabetically", 
        "icon": { 
          "light": "images/sortAlphaDownLight24px.svg", 
          "dark": "images/sortAlphaDownDark24px.svg" 
          } 
      },
      { 
        "command": "rpgQuickNavigator.toggleSortOrder.chronological", 
        "title": "Sort chronologically", 
        "icon": { 
          "light": "images/sortChronoDownLight24px.svg", 
          "dark": "images/sortChronoDownDark24px.svg" 
        } 
      },
      {
        "command": "rpgQuickNavigator.toggleGroupByKind",
        "title": "Toggle grouping by kind"
      },
      {
        "command": "rpgQuickNavigator.toggleGroupByKind.group",
        "title": "Group by kind",
        "icon": {
          "light": "images/groupByKindLight24px.svg",
          "dark": "images/groupByKindDark24px.svg"
        }
      },
      {
        "command": "rpgQuickNavigator.toggleGroupByKind.ungroup",
        "title": "Ungroup by kind",
        "icon": {
          "light": "images/ungroupByKindLight24px.svg",
          "dark": "images/ungroupByKindDark24px.svg"
        }
      }
    ],
    "configuration": {
      "title": "RPG Quick Navigator",
      "properties": {
        "rpgQuickNavigator.sortOrder": {
          "type": "string",
          "enum": ["alphabetical", "chronological"],
          "default": "chronological",
          "description": "Sort order for symbols in the navigator."
        },
        "rpgQuickNavigator.groupByKind": {
          "type": "boolean",
          "default": true,
          "description": "Group symbols by kind inside each category (e.g. const, var, DS, enum, subr)."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        { "id": "rpgQuickNavigator", "title": "RPG Quick Navigator", "icon": "images/logoRpgQuickNavigator24px.svg"}
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "rpgQuickNavigator.analyzeCurrent",
          "when": "view == rpgQuickNavigatorView || view == rpgQuickNavigatorExplorer",
          "group": "navigation@30"
        },
        {
          "command": "rpgQuickNavigator.toggleSortOrder.chronological",
          "when": "( view == rpgQuickNavigatorView || view == rpgQuickNavigatorExplorer ) && rpgQuickNavigator.sortOrder == alphabetical",
          "group": "navigation@10"
        },
        {
          "command": "rpgQuickNavigator.toggleSortOrder.alphabetical",
          "when": "( view == rpgQuickNavigatorView || view == rpgQuickNavigatorExplorer ) && rpgQuickNavigator.sortOrder == chronological",
          "group": "navigation@10"
        },
        {
          "command": "rpgQuickNavigator.toggleGroupByKind.group",
          "when": "( view == rpgQuickNavigatorView || view == rpgQuickNavigatorExplorer ) && !rpgQuickNavigator.groupByKind",
          "group": "navigation@20"
        },
        {
          "command": "rpgQuickNavigator.toggleGroupByKind.ungroup",
          "when": "( view == rpgQuickNavigatorView || view == rpgQuickNavigatorExplorer ) && rpgQuickNavigator.groupByKind",
          "group": "navigation@20"
        }
      ],
      "commandPalette": [
        { "command": "rpgQuickNavigator.toggleSortOrder.alphabetical", "when": "false" },
        { "command": "rpgQuickNavigator.toggleSortOrder.chronological", "when": "false" }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -w",
    "test": "vitest",
    "lint": "eslint .",
    "package": "vsce package",
    "typecheck:test": "tsc -p tsconfig.vitest.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "dependencies": {}
}
